{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}